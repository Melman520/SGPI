@model SGPI.Models.TblUsuario
@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "NavbarAdministradorLayout";
}

@if (ViewBag.mensaje != null){
    <script>
        Toastify({
            text: "Usuario Creado Correctamente",
            duration: 2500,
            destination: "",
            newWindow: true,
            close: false,
            gravity: "top", // `top` or `bottom`
            position: "center", // `left`, `center` or `right`
            stopOnFocus: true, // Prevents dismissing of toast on hover
            style: {
                background: "linear-gradient(to right, #00b09b, #96c93d)"
            },
            onClick: function () { } // Callback after click
        }).showToast();
    </script>
}

<div class="" style="width:100%; padding-top:5%; padding-left:10%; padding-right:10%">

    <div class="card card-login mx-auto text-center bg-light">
        <div class="card-header mx-auto bg-light">
            <span class="mt-5 font-weight-bold"> Crear Usuario </span>
        </div>
        
        <div class="card-body">
            <form action="" method="post">
                
                <div class="row">
                    <div class="col input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-address-card" aria-hidden="true"></i></span>
                        </div>
                        @Html.DropDownList("Iddoc",new SelectList(ViewBag.documento, "Iddoc", "TipoDocumento"), new { @class = "form-control" })
                    </div>
                    <div class="col input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-hashtag"></i></span>
                        </div>
                        <input type="text" id="txtDocumento" class="form-control w-25" placeholder="Número de documento" required asp-for="NumeroDocumento">
                    </div>
                    <div class="col input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-intersex" aria-hidden="true"></i></span>
                        </div>
                        @Html.DropDownList("Idgenero",new SelectList(ViewBag.genero, "Idgenero", "Genero"), new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="col input-group form-group">
                        <input type="text" id="txtNombre" class="form-control w-25" placeholder="Primer Nombre" required asp-for="PrimerNombre">
                    </div>
                    <div class="col input-group form-group">
                        <input type="text" id="txtNombre" class="form-control w-25" placeholder="Segundo Nombre" required asp-for="SegundoNombre">
                    </div>
                    <div class="col input-group form-group">
                        <input type="text" id="txtApellidoA" class="form-control w-25" placeholder="Primer apellido" required asp-for="PrimerApellido">
                    </div>
                    <div class="col input-group form-group">
                        <input type="text" id="txtApellidoB" class="form-control w-25" placeholder="Segundo apellido" required asp-for="SegundoApellido">
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col form-group">
                        <div class="input-group"><input type="email" id="txtEmail" class="form-control w-25" placeholder="Correo Electronico" required asp-for="Email"> </div>
                    </div>
                    <div class="col form-group">
                        @Html.DropDownList("Idrol",new SelectList(ViewBag.rol, "Idrol", "Rol"), new { @class = "form-control" })
                        
                    </div>
                    <div class="col">
                        @Html.DropDownList("Idprograma",new SelectList(ViewBag.programa, "Idprograma", "Programa"), new { @class = "form-control" })
                    </div>
                    <div class="col input-group form-group">
                        <input type="password" id="txtClave" class="form-control w-25" placeholder="Clave" required asp-for="Clave">
                    </div>
                </div>
                <div class="row">
                    <div class="col"></div>
                    <div class="col">
                        <input type="submit" value="Crear usuario" class="btn-success form-control" />
                    </div>
                    <div class="col"></div>
                </div>

                

            </form>
        </div>
    </div>
</div>