
@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "_LayoutSGPI";
}

<div class="container" style="width:100%; padding-top:5%; padding-left:10%; padding-right:10%">

    <div class="card card-login mx-auto text-center bg-light">
        <div class="card-header mx-auto bg-light">
            <span class="mt-5 font-weight-bold"> Recuperar contraseña </span>
        </div>
        <div class="card-body">
            <form action="" method="post">
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input type="text" id="txtUsuario" class="form-control" placeholder="Usuario">
                </div>

                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                    </div>
                    <input type="text" id="txtCorreo" class="form-control" placeholder="Correo elñectronico">
                </div>

                <div class="input-group form-group justify-content-center">
                    <input type="button" class="btn btn-success float-right login_btn" value="Enviar">
                    <input type="button" class="btn btn-danger float-right login_btn" value="Volver" onclick="history.back()">
                </div>
            </form>
        </div>
    </div>
</div>

