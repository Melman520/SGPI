@model SGPI.Models.TblUsuario
@{
    ViewData["Title"] = "Actualizar Usuario";
    Layout = "NavbarEstudianteLayout";
}

<div class="" style="width:100%; padding-top:5%; padding-left:10%; padding-right:10%">

    <div class="card card-login mx-auto text-center bg-light">
        <div class="card-header mx-auto bg-light">
            <span class="mt-5 font-weight-bold"> Actualizar Usuario </span>
        </div>

        <div class="card-body">
            <form action="" method="post">

                <div class="row">
                    <div class="col input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-address-card" aria-hidden="true"></i></span>
                        </div>
                        @Html.DropDownList("Iddoc",new SelectList(ViewBag.documento, "Iddoc", "TipoDocumento"), new { @class = "form-control" })

                    </div>
                    <div class="col input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-hashtag"></i></span>
                        </div>
                        <input asp-for="NumeroDocumento" type="text" id="txtDocumento" class="form-control w-25" placeholder="Número de documento">
                    </div>
                    <div class="col input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-intersex" aria-hidden="true"></i></span>
                        </div>
                        @Html.DropDownList("Idgenero",new SelectList(ViewBag.genero, "Idgenero", "Genero"), new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="col input-group form-group">
                        <input asp-for="PrimerNombre" type="text" id="txtNombre1" class="form-control w-25" placeholder="Primer Nombre">
                    </div>
                    <div class="col input-group form-group">
                        <input asp-for="SegundoNombre" type="text" id="txtNombre2" class="form-control w-25" placeholder="Segundo Nombre">
                    </div>
                    <div class="col input-group form-group">
                        <input asp-for="PrimerApellido" type="text" id="txtApellidoA" class="form-control w-25" placeholder="Primer apellido">
                    </div>
                    <div class="col input-group form-group">
                        <input asp-for="SegundoApellido" type="text" id="txtApellidoB" class="form-control w-25" placeholder="Segundo apellido">
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col form-group">
                        <div class="input-group"><input asp-for="Email" type="email" id="txtEmail" class="form-control w-25" placeholder="Correo Electronico"> </div>
                    </div>
                    <div class="co col-4 input-group-prepend form-group">
                            <span class="input-group-text"><i class="fa fa-upload"></i></span>
                            <input type="button" class="form-control btn btn-secondary" value="Cargar">
                        </div>
                    <div class="col">
                        @Html.DropDownList("Idprograma",new SelectList(ViewBag.programa, "Idprograma", "Programa"), new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="col"></div>
                    <div class="col">
                        <input type="submit" value="Actualizar" class="btn-success form-control" />
                    </div>
                    <div class="col"></div>
                </div>
            </form>
        </div>
    </div>
</div>

